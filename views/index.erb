<h2>Latest posts:</h2>
<br />
<% @results.each do |post| %>
	<p>
		<%= post['content'] %>
		<br />
		<br />
		<span style="font-size: 75%; color: #999">Added at <%= post['created_date'] %></span>
		<br />
		<br />
		<a class="btn btn-primary btn-sm" href="/details/<%= post['id'] %>" role="button">Comments</a>
	</p>
	<hr />
<% end %>
